{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
    {% for image in images %}
       <div class="col-md-3">
            <img src="{{ asset('images/' ~ image.path)|imagine_filter('squared_thumbnail_small') }}" alt="{{ image.user.username }}"
                 class="img-responsive">
            <p>{{ image.user.email }}</p>
        </div>
    {% endfor %}
    </div>
    <div>
        <a href="{{ url('app_main', {'page' : 0, 'limit': limit}) }}">First</a>
        {% if (page > 0) %}
            <a href="{{ url('app_main', {'page' : 0, 'limit': limit}) }}">Previous</a>
        {% endif %}
        <a href="{{ url('app_main', {'page' : page + 1, 'limit': limit}) }}">Next</a>
    </div>
</div>
{% endblock %}
